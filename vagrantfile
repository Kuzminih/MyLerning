# -*- mode: ruby -*-
# vim: set ft=ruby :

 MACHINES = {
  :vm1 => {
        :box_name => "centos/7",
        :net => [
                     # {bridge: 'wlp2s0: WiFi',ip: '10.10.10.1', netmask: '255.255.255.0'},
                      {ip: '10.10.10.2', adapter: 2, netmask: '255.255.255.252', hostonly: 'external-net'},
                      {ip: '10.10.11.1', adapter: 3, netmask: '255.255.255.0', virtualbox__intnet: 'menegment-net'},
                      {ip: '10.10.12.1', adapter: 4, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-1'}
                    ]
  },
  :vm2 => {
        :box_name => "centos/7",
        :net => [
                      {ip: '10.10.11.2', adapter: 2, netmask: '255.255.255.0', virtualbox__intnet: 'menegment-net'},
                      {ip: '10.10.12.2', adapter: 3, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-1'},
                      {ip: '10.10.12.5', adapter: 4, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-2'}
                    ]
  },
  :vm3 => {
        :box_name => "centos/7",
        :net => [
                      {ip: '10.10.11.3', adapter: 2, netmask: '255.255.255.0', virtualbox__intnet: 'menegment-net'},
                      {ip: '10.10.12.6', adapter: 3, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-2'}
                   ]
  }
}

Vagrant.configure("2") do |config|

      config.vm.box_check_update = "false"
      config.vm.provider "virtualbox" do |vb|
        vb.memory = 256
        vb.cpus = 1
      end
      
      MACHINES.each do |boxname, boxconfig|

		config.vm.define boxname do |box|

			box.vm.box = boxconfig[:box_name]
			box.vm.host_name = boxname.to_s
			  boxconfig[:net].each do |ipconf|
                      box.vm.network "private_network", **ipconf
            end
              
                  box.vm.provision "shell", inline: <<-SHELL
				mkdir -p ~root/.ssh; cp ~vagrant/.ssh/auth* ~root/.ssh
				echo 'PubkeyAuthentication yes' >> /etc/ssh/sshd_config
                        sed -i "/^[^#]*PasswordAuthentication[[:space:]]no/c\PasswordAuthentication yes" /etc/ssh/sshd_config
                        systemctl reload sshd
                        SHELL
			    
                    case boxname.to_s
                    when "vm1"
                      box.vm.provision "shell", inline: <<-SHELL
                        yum --enablerepo=epel -y install sshpass 
                        ssh-keygen -t rsa -b 2048 -P "" -f /home/root/.ssh/id_rsa -q
#                        chown vagrant:vagrant /home/vagrant/.ssh/
                        sshpass -p vagrant ssh-copy-id -i /home/root/.ssh/id_rsa root@10.10.11.2
                        sshpass -p vagrant ssh-copy-id -i /home/root/.ssh/id_rsa root@10.10.11.3
                        cat /home/root/.ssh/*
                    
                        SHELL
                    end
                    
                    case boxname.to_s
                    when "vm2"
                          box.vm.provision "shell", inline: <<-SHELL
                            cat /home/vagrant/.ssh/*
                            SHELL
			
                     
                    end
                  end
	end
end