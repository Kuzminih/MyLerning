# -*- mode: ruby -*-
# vim: set ft=ruby :

 MACHINES = {
  
  :vm2 => {
        :box_name => "centos/7",
        :net => [
                {ip: '10.10.11.2', adapter: 2, netmask: '255.255.255.0'},
                {ip: '10.10.12.2', adapter: 3, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-1'},
                {ip: '10.10.12.5', adapter: 4, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-2'}
                ]
  },
  :vm3 => {
        :box_name => "centos/7",
        :net => [
                {ip: '10.10.11.3', adapter: 2, netmask: '255.255.255.0'},
                {ip: '10.10.12.6', adapter: 3, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-2'}
                ]
  },
  :vm1 => {
        :box_name => "centos/7",
        :net => [
                {ip: '10.10.11.1', adapter: 3, netmask: '255.255.255.0'},
                {ip: '10.10.12.1', adapter: 4, netmask: '255.255.255.252', virtualbox__intnet: 'intranet-1'}
                ],
        :disks => [
          :sata1 => {dfile: './hdd/sata1.vdi', size: '200', port: '2'},
          :sata2 => {dfile: './hdd/sata2.vdi', size: '200', port: '3'}
                ]
        
#        :public => {ip: '192.168.0.64', adapter: 2, bridge: 'wlp2s0'} 
  }
}

Vagrant.configure("2") do |config|

#      config.vm.box_check_update = "false"
#      config.vm.provider "virtualbox" do |vb|
#        vb.memory = 256
#        vb.cpus = 1
#      end
      
      MACHINES.each do |boxname, boxconfig|

		  config.vm.define :boxname do |box|
			box.vm.box = boxconfig[:box_name]
      box.vm.host_name = boxname.to_s
			  
        boxconfig[:disk] do |dname, dconf|
          box.vm.disks "disk", **dconf
        end
        boxconfig[:net].each do |ipconf|
          box.vm.network "private_network", **ipconf      
        end

      if boxconfig.key?(:public)
        box.vm.network "public_network", **boxconfig[:public]
      end
                  
      box.vm.provision "shell", inline: <<-SHELL
      	mkdir -p ~root/.ssh;
        echo "ssh-rsa  fedor@fedor-X756UAM" >> /root/.ssh/authorized_keys
        cp -f /root/.ssh/* /home/vagrant/.ssh/
#			   echo 'PubkeyAuthentication yes' >> /etc/ssh/sshd_config
#        sed -i "/^[^#]*PasswordAuthentication[[:space:]]no/c\PasswordAuthentication yes" /etc/ssh/sshd_config
        sed -i "/^#*PubkeyAuthentication[[:space:]]yes/c\PubkeyAuthentication yes" /etc/ssh/sshd_config
        sysctl -w net.ipv4.ip_forward=1
        sysctl -p /etc/sysctl.conf
        systemctl reload sshd
        yum install epel-release -y && yum install firewalld -y
        systemctl start firewalld && systemctl enable firewalld
        SHELL
                  
			    
      case boxname.to_s
      when "vm1"
      box.vm.provision "shell", inline: <<-SHELL
#      ip r add 0.0.0.0/0 via 10.10.12.2
#      ip r add 0.0.0.0/0 via 192.168.0.1
#      echo "DEFROUTE=no" >> /etc/sysconfig/network-scripts/ifcfg-eth0 
#      echo "DEFROUTE=yes" >> /etc/sysconfig/network-scripts/ifcfg-eth1
      sysctl -w net.ipv4.ip_forward=1
      sysctl -p /etc/sysctl.conf
      echo "10.10.12.1  web
      10.10.12.2  router
      10.10.12.3 db" >> /etc/hosts
      SHELL
      end
                    
      case boxname.to_s
      when "vm2"
      box.vm.provision "shell", inline: <<-SHELL
      cat /home/vagrant/.ssh/* 
      ip r add 0.0.0.0/0 via 10.10.12.1
#      echo "DEFROUTE=no" >> /etc/sysconfig/network-scripts/ifcfg-eth0 
      systemctl restart network
      SHELL
      end
    
      case boxname.to_s
      when "vm2"
      box.vm.provision "shell", inline: <<-SHELL
      cat /home/vagrant/.ssh/* 
      ip r add 0.0.0.0/0 via 10.10.12.2
#      echo "DEFROUTE=no" >> /etc/sysconfig/network-scripts/ifcfg-eth0 
      systemctl restart network
      SHELL
      end
    end
	end
end