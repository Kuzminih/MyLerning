# -*- mode: ruby -*-
# vim: set ft=ruby :
# check this https://www.vagrantup.com/docs/provisioning/basic_usage#dependency-provisioners
 MACHINES = {
  :vm1 => {
        :box_name => "centos/7",
        :ip_addr => '10.10.10.10'
  },
  :vm2 => {
        :box_name => "centos/7",
        :ip_addr => '10.10.10.11'
  }
}

Vagrant.configure("2") do |config|

	MACHINES.each do |boxname, boxconfig|

		config.vm.define boxname do |box|

			box.vm.box = boxconfig[:box_name]
			box.vm.host_name = boxname.to_s
			box.vm.network "private_network", ip: boxconfig[:ip_addr]
			box.vm.provider :virtualbox do |vb|
			  vb.customize ["modifyvm", :id, "--memory", "254"]
		      end
			box.vm.provision "shell", inline: <<-SHELL
				mkdir -p ~root/.ssh; cp ~vagrant/.ssh/auth* ~root/.ssh
				echo 'PubkeyAuthentication yes' >> /etc/ssh/sshd_config
                        sed -i "/^[^#]*PasswordAuthentication[[:space:]]no/c\PasswordAuthentication yes" /etc/ssh/sshd_config
                        systemctl reload sshd
                        SHELL
                    case boxname.to_s
                    when "vm1"
                      box.vm.provision "shell", inline: <<-SHELL
                        yum install -y epel-release
                        yum --enablerepo=epel -y install sshpass 
                        SHELL
                    end
                    case boxname.to_s
                    when "vm2"
                        box.vm.provision "shell", inline: <<-SHELL
                        cat /home/vagrant/.ssh/*
                        ls -lah
                        SHELL
                    end
                    case boxname.to_s
                    when "vm1"
                        box.vm.provision "shell", inline: <<-SHELL
                        cat /home/vagrant/.ssh/*
                        ssh-keygen -t rsa -b 2048 -P "" -f /home/vagrant/.ssh/id_rsa -q
                        chown -R vagrant:vagrant /home/vagrant/.ssh/
                        sshpass -p vagrant ssh-copy-id -o StrictHostKeyChecking=no -i /home/vagrant/.ssh/id_rsa vagrant@10.10.10.11 
                        scp -r /home/vagrant/dir{1,2} vagrant@10.10.10.11:/home/vagrant/
                        cat /home/vagrant/.ssh/*
                        mkdir /home/vagrant/dir{1,2}
                        touch /home/vagrant/file{1..3}
                        ls -lah /home/vagrant/
                        scp -o StrictHostKeyChecking=no -r /home/vagrant/dir{1,2} vagrant@10.10.10.11:/home/vagrant/
                        SHELL
                    end
                  end
	end
end